@model List<LunaBisu.Models.Producto>

<h2 style="color:#c71585;"> Catálogo LunaBisú </h2>

<div style="display:flex; flex-wrap:wrap; gap:20px;">
@foreach (var p in Model)
{
    <div style="border:1px solid #eec; padding:15px; width:250px; background-color:#fff0f5; box-shadow:2px 2px 5px #ccc;">
        <img src="@p.ImagenUrl" alt="@p.Nombre" style="width:100%; height:auto; border-radius:8px;" />
        <h3 style="color:#c71585;">@p.Nombre</h3>
        <p style="font-size:0.9em;">@p.Descripcion</p>
        <p><strong> $@p.Precio</strong></p>
        <p style="font-size:0.85em;">Categoría: @p.CategoriaNombre</p>
        <p style="font-size:0.85em;">Creadora: @p.CreadoraNombre</p>
    </div>
}
</div>